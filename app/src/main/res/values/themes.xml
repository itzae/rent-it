<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_color_100</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Custom Theme-->
    <style name="Theme.NoStatusBar" parent="Theme.RentIt">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--TextStyles-->

    <style name="Text.App.TextH2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.App.TextH4" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.App.TextLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


    <style name="Text.App.TextDisplay" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/gray_color_100</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Widgets Style-->

    <style name="Widget.App.FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeRoundedButton</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.App.TextH4</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.App.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeRoundedButton</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="ShapeRoundedButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>

</resources>